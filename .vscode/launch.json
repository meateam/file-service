	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"program": "${workspaceFolder}/src/index.ts",
			"preLaunchTask": "npm: build-ts",
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"env": {
				"MONGO_HOST": "mongodb://localhost:27017/devDB",
				"BIND_ADDRESS": "0.0.0.0:8083",
				"DEBUG_MODE" : "true",
			}
		}
	]
}